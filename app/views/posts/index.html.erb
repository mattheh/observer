<h1><%= @user.name %>'s posts</h1>
<%= button_to 'Back to login', users_path, method: :get %>
<%= button_to 'New post', new_user_post_path, method: :get %>
<table>
    <tr>
        <th>Posts</th>
        <th colspan="2"></th>
      </tr>
   
    <% @user.posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= button_to 'Toggle Active/Inactive', toggle_url(@user.id, post.id) %></td>
          <td><%= button_to 'Edit', edit_user_post_path(@user.id, post.id), method: :get %></td>
          <td><%= button_to 'Destroy', user_post_path(@user.id, post.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
         </tr>
      <% end %>
</table>
