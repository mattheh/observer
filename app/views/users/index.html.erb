<h1>Listing users</h1>
<%= button_to 'New user', new_user_path, method: :get %>
<table>
    <tr>
        <th>Users</th>
        <th colspan="2"></th>
      </tr>
   
    <% @user.each do |user| %>
        <tr>
            <td><%= user.name %></td>
            <td><%= button_to 'Select', user_posts_path(user.id), method: :get %></td>
            <td><%= button_to 'Destroy', user_path(user.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
</table>
